{
    "manifest_version": 2,
    "name": "Wordsearch",
    "description": "Quick word search",
    "version": "1.0.0",
    "browser_action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "app.js"
        ],
        "persistent": false
    }
}